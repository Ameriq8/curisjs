# Environment Configuration
# Copy this file to .env and update the values

# Application
APP_NAME=CurisJS
APP_ENV=development
APP_DEBUG=true
APP_PORT=3333

# Server
HOST=0.0.0.0
PORT=3333

# Security
APP_KEY=

# Database (future use)
DB_CONNECTION=sqlite
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=curisjs
DB_USERNAME=
DB_PASSWORD=

# Cache (future use)
CACHE_DRIVER=memory

# Session (future use)
SESSION_DRIVER=cookie
SESSION_LIFETIME=120

# Logging
LOG_LEVEL=info
LOG_CHANNEL=console
